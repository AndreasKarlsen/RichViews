<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/view_payment_breakdown_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_breakdown"
        style="?android:attr/textAppearanceLarge" />

    <ImageView android:id="@+id/view_payment_breakdown_title_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@android:color/holo_blue_dark"
        android:layout_below="@id/view_payment_breakdown_title"
        tools:ignore="ContentDescription" />

    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_payment_breakdown_title_seperator"/>
</RelativeLayout>